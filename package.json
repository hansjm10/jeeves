{
  "name": "jeeves",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint \"{apps,packages}/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "typecheck": "tsc -b --pretty false",
    "build": "tsc -b --pretty false",
    "test": "vitest run",
    "run:fixture": "pnpm exec jeeves-runner run-fixture",
    "dev:viewer-server": "pnpm build && JEEVES_VIEWER_ALLOWED_ORIGINS=http://127.0.0.1:8080,http://localhost:8080 node apps/viewer-server/dist/bin.js --host 127.0.0.1 --port 8081",
    "dev:viewer": "pnpm --filter @jeeves/viewer dev",
    "dev": "pnpm build && concurrently -k -n viewer,viewer-server -c cyan,magenta \"pnpm dev:viewer\" \"JEEVES_VIEWER_ALLOWED_ORIGINS=http://127.0.0.1:8080,http://localhost:8080 node apps/viewer-server/dist/bin.js --host 127.0.0.1 --port 8081\"",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jeeves/runner": "workspace:*",
    "@types/node": "^25.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "lefthook": "^2.0.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.28.2"
}
